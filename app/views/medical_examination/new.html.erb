<h1><%= current_user.nickname %>の問診票</h1>
<h3>本日の計測結果を入力してください</h3>

<%= form_with model:@medical_examination, url:medical_examination_index_path, method: :post, local: true  do |f| %>
  <ul>
    <p> 体　　重:<%=f.text_field :weight %> </p>
    <p> 体　　温:<%=f.text_field :body_temp %> </p>
    <p> 最高血圧:<%=f.text_field :systolic_bp %> </p>
    <p> 最低血圧:<%=f.text_field :diastorlic_bp %> </p>
    <input type="submit" value="送信">
  </ul>
<% end %>

<canvas id="myChart" width="200" height="100"></canvas>
<script>draw_graph();</script> 

