<!DOCTYPE html>
<html>
  <head>
    <title>DocterChatApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= Gon::Base.render_data %>
  </head>

  <body>
  <nav class="navbar" navbar-expand navbar-dark bg-dark fixed-top >
    <%= link_to "Doctor-chat", "/", class: "navbar-brand" %>
      <% if user_signed_in? %>
      <ul class="navbar-nav" ml-auto>
        <li class="nav-item" >
          <%= link_to "問診票","#", class: "nav-link" %>
        </li>
        <li class="nav-item" >
          <%= link_to "お薬手帳","#", class: "nav-link" %>
        </li>
        <li class="nav-item" >
          <%= link_to "担当医とチャット","#", class: "nav-link" %>
        </li>
        <li class="nav-item" >
          <%= link_to "医者の評判","#", class: "nav-link" %>
        </li>
        <li class="nav-item" >
          <%= link_to "病院の評判","#", class: "nav-link" %>
        </li>
        <li class="nav-item" >
          <%= link_to "医学書籍検索","#", class: "nav-link" %>
        </li>
        <li class="nav-item" >
          <%= link_to "ログアウト",destroy_user_session_path, method: :delete, class: "nav-link" %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "新規登録", new_user_registration_path, method: :get, class: "nav-link"%>
        </li>
        <li class="nav-item">
          <%= link_to "ログイン",new_user_session_path, method: :get, class:"nav-link" %>
        </li>
      </ul>
      <% end %>
  </nav>
    <%= yield %>
  </body>
</html>
